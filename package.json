{
  "name": "@charming-art/charming",
  "version": "0.0.1",
  "description": "The data-driven language for creative coding and ASCII art.",
  "author": {
    "name": "pearmini",
    "url": "https://github.com/pearmini"
  },
  "license": "ISC",
  "type": "module",
  "main": "dist/es/index.js",
  "module": "dist/es/index.js",
  "jsdelivr": "dist/cm.umd.min.js",
  "unpkg": "dist/cm.umd.min.js",
  "exports": {
    "umd": "./dist/cm.umd.min.js",
    "default": "./dist/es/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charming-art/charming.git"
  },
  "files": [
    "dist/**/*.wasm",
    "dist/*/**.js"
  ],
  "scripts": {
    "dev": "npm run build:rust && vite dev",
    "test": "npm run test:rust && npm run test:js",
    "test:js": "vitest",
    "test:rust": "cargo test --manifest-path ./rust/Cargo.toml",
    "build": "npm run build:rust && npm run build:js",
    "build:js": "rm -rf dist && rollup -c",
    "build:rust": "rm -rf ./src/backend && wasm-pack build ./rust --out-dir ../src/backend --out-name index --target web"
  },
  "sideEffect": false,
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-wasm": "^6.1.3",
    "d3-geo": "^3.1.0",
    "matter-js": "^0.19.0",
    "rollup": "^3.29.4",
    "stats.js": "^0.17.0",
    "toxiclibsjs": "^0.3.3",
    "vite": "^4.4.9",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "d3-color": "^3.1.0",
    "d3-path": "^3.1.0",
    "d3-timer": "^3.0.1",
    "figlet": "^1.6.0"
  },
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
